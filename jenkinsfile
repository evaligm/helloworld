pipeline {
	agent any
	tools {maven 'Maven 3.8.1'} 

   stages {

      def app

      stage('Get Source From GIT') { 
           steps {  git branch: 'master', credentialsId: 'admin', poll: true, changelog: true, url: 'https://github.com/evaligm/helloworld'}
          } // end stage

      stage('Maven Build') { 
           steps  {  sh "mvn clean install package"  }
          } // end stage

      }  // end stages
   }  //end pipeline