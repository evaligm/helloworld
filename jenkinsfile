pipeline {
	agent any
	tools {maven 'Maven 3.8.1'} 

   stages {

      stage('Get Source From GIT') { 
           steps {  git branch: 'main', credentialsId: 'admin', poll: true, changelog: true, url: 'https://github.com/evaligm/helloworld'}
          } // end stage

      stage('Maven Build') { 
           steps  {  sh "mvn clean install package"  }
          } // end stage

      stage('Push jar file to Nexus') {
           steps  { 
               nexusArtifactUploader {
                    nexusVersion: 'nexus3', protocol: 'http',  nexusUrl: 'localhost:8081/nexus', groupId: 'helloworldgp',  repository: 'maven-repo1', credentialsId: 'admin',  [artifactId: 'helloworldid', classifier: 'debug', file: 'target/HelloWorld-0.0.1-SNAPSHOT.jar', type: 'jar']
               } // end nexus
               
               } // end step
          } // end stage

      }  // end stages
   }  //end pipeline